<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="de.curry-masala.app" versionCode="1" version="1.3.0">

    <name>Curry Masala</name>

    <description>
        Einfach und schnell leckeres bei Curry Masala bestellen.
    </description>

    <author href="https://www.jthglobal.com" email="jensbroecher@gmail.com">
        JTH / ICS Software Development
    </author>

    <icon src="icon.png" />

    <platform name="android" />
    <preference name="android-minSdkVersion" value="23" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name='pgb-builder-version' value='1' />
    <preference name="phonegap-version" value="cli-6.5.0" />

    <preference name="android-build-tool" value="gradle" />

    <!-- Core plugins -->
    <gap:plugin name="cordova-plugin-geolocation" source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <gap:plugin name="cordova-plugin-legacy-whitelist" source="npm" />

    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />

    <access origin="*" />

</widget>
